@model IList<mvctest.Models.Staff> 
@{
    ViewBag.Title = "StaffList";
}
<table>
    <tr><td colspan="5" align="right">@Html.ActionLink("添加员工信息", "AddStaff", "Show_Staff")</td></tr>
    <tr><th height="40">ID</th><th>姓名</th><th>年龄</th><th>性别</th><th>岗位</th><th>部门</th></tr>
    @{
        foreach (mvctest.Models.Staff staffs in Model)
        {
            <tr>
                <td height="30">@staffs.S_id</td>
                <td height="30">@staffs.S_name</td>
                <td height="30">@staffs.S_age</td>
                <td height="30">@staffs.S_gender</td>
                <td height="30">@staffs.S_post</td>
                <td height="30">@staffs.S_department</td>
                <td>@Html.ActionLink("修改员工信息", "UpdateStaff", new { id = staffs.S_id })</td>
                <td>@Html.ActionLink("删除员工信息", "DeleteStaff", new { id = staffs.S_id })</td>
            </tr>
        }
    }
</table>

